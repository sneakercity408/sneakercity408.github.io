<main>
    <% layout('layouts/boilerplate')%>
</main>



<link rel="stylesheet" href="/../assets/add.css">

<title>Edit Shoe</title>


<body class="add">
    <div class="container" id="add">
        <header>
            <h1>
                <a href="#">
                    <h2>SneakerCity</h2>
                </a>
            </h1>
        </header>
        <h1 class="text-center">Add Shoes</h1>
        <form class="registration-form" action="/sneakers/<%=shoess._id  %>?_method=PUT " method="POST" enctype="multipart/form-data">

            <label class="col-one-half">
                <span class="label-text">Product Name</span>
                <input type="text" id="name" name="shoes[name]" value="<%= shoess.name  %>  ">
            </label>
            <label class="col-one-third">
                <span class="label-text">Price</span>
                <input type="text" id="price" name="shoes[price]" placeholder="$" value="<%= shoess.price.toFixed(2) %> ">
            </label>
            <label>
                <span class="label-text">Location</span>
                <input type="text" id="location" name="shoes[location]" value="<%= shoess.location  %> ">
            </label>
            <label class="custom-file">
                <span class="label-text">Add Picture(s)</span>
                <div class="custom-file" id="uptext">
                    <input type="file" class="custom-file-input" name="image" id="image" multiple>
                    <label class="custom-file-label custom-file-label" for="inputGroupFile04">Choose file</label>
                </div>
                
            </label>
            <!-- <input type="file" name="image" id="image" multiple> -->
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" name="shoes[description]"
                    rows="3"><%= shoess.description %> </textarea>
            </div>
            <div class="input-group">
                <select class="custom-select" id="brand" name="shoes[brand]" >
                    <option selected>Choose Shoe Brand.</option>
                    <option value="Nike">Nike</option>
                    <option value="Jordan">Jordan</option>
                    <option value="Other">Other</option>
                </select>

            </div>
            <div class="text-center">
                <button class="submit" id="submittext">Confirm Add</button>
            </div>
        </form>
    </div>

</body>
<script>
bsCustomFileInput.init();   
    $("div.input-group select").val("<%- shoess.brand %>").change();
    
</script>